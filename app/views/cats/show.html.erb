<h1> You are currently viewing <%= @cat.name %>'s Profile </h1>

<table>
    <tr>
      <td> <%= @cat.name %> </td>
      <td> <%= @cat.sex %> </td>
      <td> <%= @cat.age %> </td>
      <td> <%= @cat.color %> </td>
    </tr>
</table>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>
